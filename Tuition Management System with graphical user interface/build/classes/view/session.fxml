<?import java.lang.*?>
<?import java.net.*?>
<?import java.util.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.text.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.control.*?>

<VBox fx:controller="controller.SessionController" styleClass="background" prefHeight="300.0" prefWidth="600.0" spacing="50" 
      xmlns:fx="http://javafx.com/fxml" >    
  <stylesheets>
      <URL value="@tmsfx.css"/>
  </stylesheets>
  <VBox>
      <HBox spacing="15" styleClass="header">
      <ImageView>
          <image>
              <Image url="@uts.png"/>
          </image>
      </ImageView>
      </HBox>
      <HBox styleClass="header">
      <Label text="Tuition Management System" styleClass="h1"/>
      </HBox>
     </VBox>

  <VBox spacing = "10" alignment="BOTTOM_RIGHT">
      <Button text="Login" fx:id="loginBtn" onAction="#handleLogin"/>
      <Button text="Exit" fx:id="exitBtn" onAction="#handleExit"/>
  </VBox>
</VBox>


    